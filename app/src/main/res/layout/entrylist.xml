<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="false"
    tools:context=".EntryList">

    <LinearLayout
        android:id="@+id/EntryHeader"
        android:layout_width="wrap_content"
        android:layout_height="240sp"
        android:layout_marginTop="-100dp"
        android:paddingTop="115dp"
        android:background="@drawable/background_login"
        android:orientation="horizontal"
        android:weightSum="10"
        android:translationZ="90dp">
        <ImageView
            android:padding="10dp"
            android:layout_width="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/profile_template"
            />
        <TextView
            android:id="@+id/UsernameLabel"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_marginTop="10dp"
            android:layout_weight="8"
            android:gravity="center_vertical"
            android:lineHeight="37dp"
            android:text="Anna Lisa"
            android:textColor="@color/white"
            android:textSize="25sp" />
        <ImageButton
            android:id="@+id/LogoutButton"
            android:layout_width="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:src="@drawable/logout"
            android:scaleType="fitCenter"
            android:padding="20dp"
            android:background="#00000000"
            />
    </LinearLayout>


    <ScrollView
        android:id="@+id/scrollv2"
        android:layout_width="325sp"
        android:layout_height="match_parent"
        android:layout_below="@+id/EntryHeader"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-50dp"
        android:scrollbars="none">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvContacts"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>