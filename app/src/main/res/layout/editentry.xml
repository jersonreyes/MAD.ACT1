<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="false">

    <LinearLayout
        android:id="@+id/background"
        android:layout_width="wrap_content"
        android:layout_height="240sp"
        android:layout_marginTop="-100dp"
        android:translationZ="90dp"
        android:background="@drawable/background_login"
        android:orientation="vertical" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:paddingLeft="0dp"
        android:text="Edit Entry\nPage"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        android:translationZ="91dp" />


    <ScrollView
        android:id="@+id/scrollv"
        android:layout_width="325sp"
        android:layout_height="match_parent"
        android:layout_below="@id/background"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-50dp"
        android:scrollbars="none">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/welcome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/logo"
                android:layout_gravity="center"
                android:layout_marginTop="60dp"
                android:gravity="center"
                android:paddingLeft="0dp"
                android:text="ACCOUNT NAME"
                android:textColor="#000000"
                android:textSize="30sp"
                android:textStyle="bold"
                android:translationZ="91dp" />

            <TextView
                android:id="@+id/detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/welcome"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="40sp"
                android:gravity="center"
                android:text="Filled fields will only take effect." />

            <ImageView
                android:id="@+id/profilelabel"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_below="@+id/detail"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/profile_template"

                />
            <Button
                android:id="@+id/profileBtn"
                android:layout_below="@+id/profilelabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Take a picture"
                android:layout_gravity="center"
                android:layout_marginBottom="30dp"
                />


            <EditText
                android:id="@+id/editName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="@drawable/edittext_stroke"
                android:drawableLeft="@drawable/person"
                android:drawablePadding="20dp"
                android:ems="10"
                android:hint="Name"
                android:inputType="textCapWords"
                android:paddingTop="20dp"
                android:paddingBottom="20dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/email"
                android:layout_marginBottom="20dp"
                android:background="@drawable/edittext_stroke"
                android:drawableLeft="@drawable/lock"
                android:drawablePadding="20dp"
                android:ems="10"
                android:hint="Remark"
                android:inputType="textPassword"
                android:paddingTop="20dp"
                android:paddingBottom="20dp" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:text="Gender" />

            <RadioGroup
                android:id="@+id/gender"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/male"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="Male" />

                <RadioButton
                    android:id="@+id/female"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="Female" />

                <RadioButton
                    android:id="@+id/others"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="Others" />

            </RadioGroup>

            <TextView
                android:id="@+id/textView14_"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="10dp"
                android:text="Set Date of Birth" />

            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="40dp"
                android:background="@drawable/edittext_stroke_full"
                android:onClick="dateDialog"
                android:padding="20dp"
                android:text="01/01/1990" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Street" />

                <EditText
                    android:id="@+id/street"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/edittext_stroke"
                    android:drawableLeft="@drawable/location"
                    android:drawablePadding="20dp"
                    android:ems="10"
                    android:hint="Maria Cristina St."
                    android:inputType="textCapWords"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp" />

                <TextView
                    android:id="@+id/textView24"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="House Number" />

                <EditText
                    android:id="@+id/housenumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp"
                    android:background="@drawable/edittext_stroke"
                    android:drawableLeft="@drawable/house"
                    android:drawablePadding="20dp"
                    android:ems="10"
                    android:hint="01 Carola"
                    android:inputType="textCapWords"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="35dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="98dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:inputType="textCapWords"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView17"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Barangay" />

                        <AutoCompleteTextView
                            android:id="@+id/barangay"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edittext_stroke"
                            android:hint="Caniogan"
                            android:inputType="textCapWords"
                            android:paddingTop="20dp"
                            android:paddingBottom="20dp"
                            android:text="" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="104dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginLeft="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView15"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Municipality" />

                        <AutoCompleteTextView
                            android:id="@+id/municipality"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edittext_stroke"
                            android:hint="Calumpit"
                            android:inputType="textCapWords"
                            android:paddingTop="20dp"
                            android:paddingBottom="20dp"
                            android:text="" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top|center"
                        android:layout_marginLeft="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView16"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Province" />

                        <AutoCompleteTextView
                            android:id="@+id/province"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edittext_stroke"
                            android:drawablePadding="20dp"
                            android:hint="Bulacan"
                            android:inputType="textCapWords"
                            android:paddingTop="20dp"
                            android:paddingBottom="20dp"
                            android:text="" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>


            <TextView
                android:id="@+id/textView18"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Phone Number" />

            <EditText
                android:id="@+id/number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:background="@drawable/edittext_stroke"
                android:drawableLeft="@drawable/phone"
                android:drawablePadding="20dp"
                android:ems="10"
                android:hint="0942-215-1251"

                android:inputType="number"
                android:maxLength="11"
                android:paddingTop="20dp"
                android:paddingBottom="20dp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:text="Select Your Hobbies" />

            <RelativeLayout
                android:id="@+id/hobbiescont"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="30dp">

                <CheckBox
                    android:id="@+id/ch1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/rounded_corner_checkbox"
                    android:buttonTint="@color/black"
                    android:paddingRight="20dp"
                    android:text="Singing"
                    android:textColor="@color/black" />

                <CheckBox
                    android:id="@+id/ch2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_toRightOf="@+id/ch1"
                    android:background="@drawable/rounded_corner_checkbox"
                    android:buttonTint="@color/black"
                    android:paddingRight="20dp"
                    android:text="Playing\nGuitar"
                    android:textColor="@color/black" />

                <CheckBox
                    android:id="@+id/ch3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/ch2"
                    android:background="@drawable/rounded_corner_checkbox"
                    android:buttonTint="@color/black"
                    android:paddingRight="20dp"
                    android:text="Playing Games"
                    android:textColor="@color/black" />

                <CheckBox
                    android:id="@+id/ch4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ch1"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/rounded_corner_checkbox"
                    android:buttonTint="@color/black"
                    android:paddingRight="20dp"
                    android:text="Dancing"
                    android:textColor="@color/black" />

                <CheckBox
                    android:id="@+id/ch5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ch1"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_toRightOf="@+id/ch4"
                    android:background="@drawable/rounded_corner_checkbox"
                    android:buttonTint="@color/black"
                    android:paddingRight="15dp"
                    android:text="Painting"
                    android:textColor="@color/black" />

                <CheckBox
                    android:id="@+id/ch6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ch1"
                    android:layout_toRightOf="@+id/ch5"
                    android:background="@drawable/rounded_corner_checkbox"
                    android:buttonTint="@color/black"
                    android:paddingRight="15dp"
                    android:text="Reading"
                    android:textColor="@color/black" />

                <CheckBox
                    android:id="@+id/ch7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ch4"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/rounded_corner_checkbox"
                    android:buttonTint="@color/black"
                    android:paddingRight="15dp"
                    android:text="Baking"
                    android:textColor="@color/black" />

                <CheckBox
                    android:id="@+id/ch8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ch4"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_toRightOf="@+id/ch7"
                    android:background="@drawable/rounded_corner_checkbox"
                    android:buttonTint="@color/black"
                    android:paddingRight="15dp"
                    android:text="Gardening"
                    android:textColor="@color/black" />

                <CheckBox
                    android:id="@+id/ch9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ch4"
                    android:layout_toRightOf="@+id/ch8"
                    android:background="@drawable/rounded_corner_checkbox"
                    android:buttonTint="@color/black"
                    android:paddingRight="15dp"
                    android:text="Writing"
                    android:textColor="@color/black" />

                <CheckBox
                    android:id="@+id/ch10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ch7"
                    android:background="@drawable/rounded_corner_checkbox"
                    android:buttonTint="@color/black"
                    android:paddingRight="15dp"
                    android:text="Cooking"
                    android:textColor="@color/black" />

            </RelativeLayout>

            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="20dp"
                android:background="?android:attr/listDivider" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:text="Security Questions"
                android:textSize="15sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/textView20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="0dp"
                android:text="Question 1" />

            <Spinner
                android:id="@+id/q1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/Questions"
                android:paddingTop="10dp"
                android:paddingBottom="10dp" />

            <EditText
                android:id="@+id/q1a"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="@drawable/edittext_stroke_full"
                android:drawablePadding="20dp"
                android:ems="10"
                android:hint="Answer #1"
                android:inputType="textCapWords"
                android:paddingTop="20dp"
                android:paddingBottom="20dp" />

            <TextView
                android:id="@+id/textView19"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="0dp"
                android:text="Question 2" />

            <Spinner
                android:id="@+id/q2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/Questions"
                android:paddingTop="10dp"
                android:paddingBottom="10dp" />

            <EditText
                android:id="@+id/q2a"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="@drawable/edittext_stroke_full"
                android:drawablePadding="20dp"
                android:ems="10"
                android:hint="Answer #2"
                android:inputType="textCapWords"
                android:paddingTop="20dp"
                android:paddingBottom="20dp" />

            <TextView
                android:id="@+id/textView21"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="0dp"
                android:text="Question 3" />

            <Spinner
                android:id="@+id/q3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/Questions"
                android:paddingTop="10dp"
                android:paddingBottom="10dp" />

            <EditText
                android:id="@+id/q3a"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:background="@drawable/edittext_stroke_full"
                android:drawablePadding="20dp"
                android:ems="10"
                android:hint="Answer #3"
                android:inputType="textCapWords"
                android:paddingTop="20dp"
                android:paddingBottom="20dp" />

            <Button
                android:id="@+id/signin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/rounded_corner"
                android:onClick="validate"
                android:text="Sign Up"
                android:textAllCaps="false"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/or"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:text="or" />

            <Button
                android:id="@+id/login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:background="@drawable/rounded_corners_plain"
                android:onClick="login_transfer"
                android:text="Sign In"
                android:textAllCaps="false"
                android:textColor="#50000000" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>